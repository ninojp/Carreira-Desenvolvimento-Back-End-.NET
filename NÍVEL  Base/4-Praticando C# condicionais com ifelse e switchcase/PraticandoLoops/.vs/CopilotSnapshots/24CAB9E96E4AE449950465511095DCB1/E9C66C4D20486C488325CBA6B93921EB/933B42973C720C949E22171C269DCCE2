class WhileLacoRepeticao
{
    public void WhileLoop()
    {
        int contador = 10;
        while (contador > 0)
        {
            Console.ForegroundColor = ConsoleColor.DarkGreen;
            Console.WriteLine($"Contador: {contador}");
            contador--;
            Console.ResetColor();
        }
        Console.WriteLine("\n Fim do laço de repetição While.");
    }
    public void DoWhileLoop()
    {   
        int opcao;
        do
        {
            Console.WriteLine("\nMENU:");
            Console.WriteLine("1 - Ver produtos");
            Console.WriteLine("2 - Fazer pedido");
            Console.WriteLine("0 - Sair");
            Console.Write("Escolha uma opção: ");
            opcao = int.Parse(Console.ReadLine());
            
            switch (opcao)
            {
                case 1:
                    Console.WriteLine("Mostrando produtos.");
                    break;
                case 2:
                    Console.WriteLine("Pedido realizado!");
                    break;
                case 0:
                    Console.WriteLine("Saindo...");
                    break;
                default:
                    Console.WriteLine("Opção inválida!");
                    break;
            }
        } while ( opcao > 0);
        //Switch-Case simplificado usando a expressão switch, que é uma
        //forma mais concisa de escrever um switch case tradicional.
        //será que podemos usar no Do While?

        Console.WriteLine("switch case simplificado para demonstrar o uso do Do While");
        Console.WriteLine("\nMENU:");
        Console.WriteLine("1 - Ver produtos");
        Console.WriteLine("2 - Fazer pedido");
        Console.WriteLine("0 - Sair");
        Console.Write("Escolha uma opção: ");
        opcao = int.Parse(Console.ReadLine());



    }
}
